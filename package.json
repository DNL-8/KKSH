{
  "name": "study-leveling-fullstack",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm dev:all",
    "dev:client": "vite --host --port 3000",
    "dev:api": "python -m uvicorn app.main:app --app-dir backend --reload --port 8000",
    "dev:all": "concurrently -n client,api -c auto \"pnpm dev:client\" \"pnpm dev:api\"",
    "build:client": "vite build",
    "build": "pnpm build:client",
    "preview": "vite preview --host",
    "typecheck": "tsc --noEmit",
    "lint:frontend": "eslint client/src",
    "lint:backend": "ruff check backend && black --check backend && mypy backend/app",
    "test:backend": "pytest -q backend/tests",
    "check": "pnpm lint:frontend && pnpm typecheck && pnpm lint:backend && pnpm test:backend",
    "e2e:serve": "concurrently -n api,client -c auto \"cross-env ENV=test JWT_SECRET=change-me-in-prod AUTO_CREATE_DB=true SEED_DEV_DATA=true DATABASE_URL=sqlite:///./e2e.db CORS_ORIGINS=http://127.0.0.1:3000 SERVE_FRONTEND=false TZ=America/Sao_Paulo python -m uvicorn app.main:app --app-dir backend --port 18000\" \"cross-env VITE_DEV_API_TARGET=http://127.0.0.1:18000 pnpm dev:client -- --host 127.0.0.1 --port 3000 --strictPort\"",
    "e2e": "playwright test",
    "e2e:hub": "playwright test e2e/hub.dynamic.spec.ts",
    "e2e:evolution": "playwright test e2e/evolution.dynamic.spec.ts",
    "e2e:install": "playwright install --with-deps"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.21",
    "lucide-react": "^0.468.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0",
    "web-vitals": "^4.2.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.1",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.16.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "postcss": "^8.4.49",
    "rollup-plugin-visualizer": "^5.12.0",
    "tailwindcss": "^3.4.16",
    "typescript": "^5.7.2",
    "vite": "^5.4.11"
  },
  "packageManager": "pnpm@10.29.2"
}
